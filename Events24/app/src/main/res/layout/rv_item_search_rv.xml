<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_for_events"
    android:layout_marginTop="@dimen/margin_main"
    android:layout_marginBottom="@dimen/margin_main"
    android:orientation="vertical"
    android:background="@color/purple_dark">

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:background="@color/purple"
        app:cardCornerRadius="@dimen/card_view_corner">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rv_item_small_height"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premijera filma ''Božiji čovek''"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_rv_item"
        android:text="10 November 2021"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_small"
        android:textStyle="italic"/>

</LinearLayout>